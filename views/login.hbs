<div class="container-fluid">
	<h1 class="text-center">Login</h1>
	<form class="form-horizontal d-flex justify-content-center" method="POST" action="/login">
		<div class="form-floating">
			<input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
			<label for="username">Username</label>
		</div>
		<div class="form-floating mx-3">
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
			<label for="password">Password</label>
		</div>
		<div>
			<button type="submit" class="btn btn-outline-dark btn-lg">Login</button>
		</div>
	</form>
	{{#if loginMessage}}<h5 class="text-center error-message">{{loginMessage}}</h5>{{/if}}

	<h3 class="text-center mt-5">If you do not have an account, create one below!</h3>
	<form class="form-horizontal d-flex justify-content-center" method="POST" action="/register">
		<div class="form-floating">
			<input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
			<label for="username">Username</label>
		</div>
		<div class="form-floating mx-3">
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
			<label for="password">Password</label>
		</div>
		<div>
			<button type="submit" class="btn btn-outline-dark btn-lg">Register</button>
		</div>
	</form>
	{{#if registrationMessage}}<h5 class="text-center error-message">{{registrationMessage}}</h5>{{/if}}
</div>
<div class="container-fluid">
	<h1 class="text-center">Course Registry</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Course Number</th>
				<th>Course Name</th>
				<th>Scheduled Times</th>
				<th>Professors</th>
			</tr>
		</thead>
		<tbody>
			{{#each courses}}
				<tr>
					<td>{{courseNumber}}</td>
					<td>{{courseName}}</td>
					<td>{{#each scheduledTimes}}
						{{day}} {{start}}-{{end}}<br>
					{{/each}}</td>
					<td>{{#each professors}}
						{{first}} {{last}} {{#if rating}}({{rating}} &#11088){{/if}}<br>
					{{/each}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<form method="POST" action="/courses/remove">
	  <div class="form-inline" class="input-group">
	    <label for="sel1">Select course to remove from registry:</label>
	    <select class="form-control" id="sel1" name="courseToRemove">
	      {{#each courses}}
	        <option>{{courseNumber}}: {{courseName}}</option>
	      {{/each}}
	    </select>
	    <button type="submit" class="btn btn-default">Remove</button>
	  </div> 
	</form>	
</div>
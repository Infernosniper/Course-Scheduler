<div class="container-fluid">
	<h1 class="text-center">{{titleMessage}}</h1>
	{{#if numSchedules}}
	<h1 class="text-center">{{numSchedules}} possible schedules made</h1>
	{{/if}}
	<br>
	{{#each timeTables}}
		<h2 class="text-center">{{numCourses}} courses, {{numCredits}} credits</h2>
		<table class="table table-borderless">
			<thead>
				<tr>	
					<th scope="col" class="col-sm-1"></th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Sunday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Monday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Tuesday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Wednesday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Thursday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Friday</th>
					<th scope="col" class="col-sm-1 text-center" scope="row">Saturday</th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						{{#if newRow}}
						<th scope="row" class="border-top text-center" rowspan="6">{{timeStr}}</th>
						{{/if}}
						{{#each coursesAtTime}}
						{{#if numBlocks}}
						<td class="text-center"style= "background-color:{{color}}55; font-weight:bold;" rowspan="{{numBlocks}}">{{courseNumber}}<br>{{courseName}}<br><span style="font-weight:normal;">{{#each professors}}{{last}}<br>{{/each}}</span></td>
						{{/if}}
						{{#unless numBlocks}}
						{{#unless spannedOver}}
						<td></td>
						{{/unless}}
						{{/unless}}
						{{/each}}
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{/each}}
</div>
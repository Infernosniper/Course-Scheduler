<div class="container-fluid">
	<form class="form-horizontal" method="POST" action="/courses/add">
		<div class="form-group">
			<label class="control-label col-sm-2" for="courseNumber">Course Number:</label>
			<div class="col-sm-10">
		    	<input type="text" class="form-control" id="courseNumber" name= "courseNumber" placeholder="Enter course number ('DEPT-LV XXXX', e.g., 'CHEM-UA 225')">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="courseName">Course Name:</label>
			<div class="col-sm-10">
		    	<input type="text" class="form-control" id="courseName" name= "courseName" placeholder="Enter course name">
		    </div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="credits">Credits:</label>
			<div class="col-sm-10">
		    	<input type="Number" class="form-control" id="credits" name= "credits" placeholder="Enter number of credits">
		    </div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="scheduledTimes">Scheduled Times:</label>
			<div class="col-sm-10">
		    	<input type="text" class="form-control" id="scheduledTimes" name= "scheduledTimes" placeholder="Enter scheduled times ('DAY HHMM-HHMM, DAY HHMM-HHMM...', e.g., 'Mon 0930-1045, Wed 0930-1045, Thu 1230-1345')">
		    </div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="professors">Professors:</label>
			<div class="col-sm-10">
		    	<input type="text" class="form-control" id="professors" name= "professors" placeholder="Enter professors ('[First] Last [(rating)], [First] Last [(rating)]...', e.g., 'Angelo (4.9), John Henssler'">
		    </div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
		    	<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
</div>